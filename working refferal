});

async function sendShareMenu(chatId) {
    const keyboard = {
        keyboard: [
            ['üåü My channel invite link'],
            ['‚≠ê Check Star Points Balance'],
            ['üåü Star Points Redemption Rewards'],
            ['‚¨ÖÔ∏è BACK']
        ],
        resize_keyboard: true
    };

    bot.sendPhoto(chatId, path.join(__dirname, 'assets', 'new-deposit-bonus.png'), {
        caption: 'üåü Share the channel, earn star credit! Collect and redeem for ‚Çπ50 daily rewards!',
    }).then(() => {
        bot.sendMessage(chatId, 'Choose an option:', { reply_markup: keyboard });
    });

}

bot.on('callback_query', (callbackQuery) => {
    const msg = callbackQuery.message;
    const chatId = msg.chat.id;
    const userId = callbackQuery.from.id.toString();
    const data = callbackQuery.data;
    const user = users[userId];

    const starToAmount = {
        3: 15,
        5: 25,
        10: 50,
        20: 100,
        50: 250,
        100: 500
    };

    if (data.startsWith('redeem_')) {
        const starsRequired = parseInt(data.split('_')[1]);
        const amount = starToAmount[starsRequired];

        if (!amount) {
            return bot.answerCallbackQuery(callbackQuery.id, { text: `‚ùó Invalid redemption option.` });
        }

        if (user.stars >= starsRequired) {
            const codesFile = path.join(__dirname, 'data', 'codes', `${starsRequired}.json`);

            if (fs.existsSync(codesFile)) {
                const codes = JSON.parse(fs.readFileSync(codesFile));

                if (codes.length === 0) {
                    return bot.answerCallbackQuery(callbackQuery.id, { text: `‚ùó No more ‚Çπ${amount} codes available. Please contact admin.` });
                }

                const code = codes.shift();
                fs.writeFileSync(codesFile, JSON.stringify(codes, null, 2));

                user.stars -= starsRequired;
                user.totalRedemptions = (user.totalRedemptions || 0) + 1;
                user.lastActive = new Date().toISOString();
                saveUsers();


                bot.sendPhoto(chatId, path.join(__dirname, 'assets', 'new-deposit-bonus.png'), {
                    caption: `üéâ *Congratulations!*\n\nYou redeemed *${starsRequired}‚≠ê* for ‚Çπ${amount}!\n\nYour redemption code:\n\`${code}\`\n\nüßæ *To redeem:*\n- Login at [Raja Games](https://rajagames.in/#/login)\n- If not registered, [Register here](https://rajagames.in/#/register)\n- Enter the code in your account.\n\nEnjoy your bonus!`,
                    parse_mode: 'Markdown'
                });

                if (ADMIN_CHAT_ID) {
                    const totalStars = users[userId]?.totalStars || 0;
                    const currentStars = users[userId]?.stars || 0;
                    const referredCount = Object.values(users).filter(u => u?.referredBy?.id == userId).length;

                    bot.sendMessage(ADMIN_CHAT_ID,
                        `‚úÖ *User Redeemed ‚Çπ${amount}:*\n\n` +
                        `üë§ *${callbackQuery.from.first_name}*\n` +
                        `üÜî *${userId}*\n` +
                        `üë• *Total Referrals:* ${referredCount}\n` +
                        `üéÅ *Lifetime Stars Collected:* ${totalStars}\n` +
                        `üíº *Current Star Balance:* ${currentStars}\n` +
                        `üîë *Code:* \`${code}\``,
                        { parse_mode: 'Markdown' }
                    ).catch(err => console.error("Failed to notify admin:", err.message));
                }

                bot.answerCallbackQuery(callbackQuery.id, { text: `üéâ Redemption successful! Check your code.` });
            } else {
                bot.answerCallbackQuery(callbackQuery.id, { text: `‚ùó Code file for ${starsRequired}‚≠ê not found.` });
            }
        } else {
            bot.answerCallbackQuery(callbackQuery.id, { text: `‚ö† Insufficient balance!\nCurrent balance: ${user.stars} ‚≠ê\nRequired: ${starsRequired} ‚≠ê`, show_alert: true });
        }
    }

    if (data === 'back') {
        sendWelcomeBackMessage(chatId, users[userId]);
        return;
    }

});

console.log("ü§ñ RAJA GAMES HELP BOT with Admin features is running...");
