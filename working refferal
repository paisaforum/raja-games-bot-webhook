        case 'üèõ Can\'t install the game?':
            bot.sendDocument(chatId, path.join(__dirname, 'assets', 'AR008_RajaGames_fcm_accurate_2.2_2025.04.24.apk'), { caption: 'üèõ Download the game APK' });
            break;

        case 'üí¨ 24-hour customer service':
