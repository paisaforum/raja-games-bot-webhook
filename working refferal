require('dotenv').config();
const TelegramBot = require('node-telegram-bot-api');
const fs = require('fs');
const path = require('path');

const TOKEN = process.env.BOT_TOKEN;
const REQUIRED_CHANNEL = process.env.REQUIRED_CHANNEL.replace('@', '');
const BOT_USERNAME = process.env.BOT_USERNAME;
const ADMIN_CHAT_ID = process.env.ADMIN_CHAT_ID;

const bot = new TelegramBot(TOKEN, { polling: true });

const usersFile = path.join(__dirname, 'data', 'users.json');
let users = {};
let adminAwaitingUserId = false;


if (fs.existsSync(usersFile)) {
    users = JSON.parse(fs.readFileSync(usersFile));
}

function saveUsers() {
    fs.writeFileSync(usersFile, JSON.stringify(users, null, 2));
}

async function isMember(userId) {
    try {
        const res = await bot.getChatMember(`@${REQUIRED_CHANNEL}`, userId);
        return ['member', 'administrator', 'creator'].includes(res.status);
    } catch {
        return false;
    }
}

function getReferralCount(userId) {
    return Object.values(users).filter(u => u?.referredBy?.id == userId).length;
}




function getLeaderboard(topN = 10) {
    return Object.entries(users)
        .sort(([, a], [, b]) => (b.totalStars || 0) - (a.totalStars || 0))
        .slice(0, topN)
        .map(([id, u], i) => `${i + 1}. ${u.name || 'Unknown'} (ID: ${id}) - ‚≠ê ${u.totalStars || 0}`)
        .join('\n') || 'No users yet.';
}




function sendAdminMenu(chatId) {
    bot.sendMessage(chatId, "üõ† *Admin Panel:*", {
        parse_mode: 'Markdown',
        reply_markup: {
            keyboard: [
                ['üìä Platform Stats', 'üë• View User Info'],
                ['üèÜ Leaderboard', 'üë§ Switch to User View']
            ],
            resize_keyboard: true
        }
    });
}

function sendWelcomeBackMessage(chatId, user) {
    bot.sendPhoto(chatId, path.join(__dirname, 'assets', 'new-deposit-bonus.png'), {
        caption:
            `üëã Hello: ${user.name || 'RAJA GAMES USER'}

üèõ *RAJA GAME* is a premium gaming platform offering top games like Aviator, Evolution, and Jili, with 24/7 dedicated customer support.
üèÜ We prioritize trust and fairness, ensuring you a reliable gaming experience.

üí∏ Earn ‚Çπ50 effortlessly here! üéâ
‚ù§Ô∏è Post & Share to Earn ‚Çπ28-288
üíñ Share your unique link with friends to start earning.
üìù Click the button below to post it on social media to start earning.
üí• No limits on the number of shares‚Äîact fast and claim your rewards!

üí° Click the button below to learn more money-making tips and get the latest updates on RAJA GAME!
Website: [www.rajagames.com](https://rajagames.com)`,
        parse_mode: 'Markdown'
    }).then(() => {
        bot.sendMessage(chatId, "Welcome! Please choose an option:", {
            reply_markup: getUserMenuKeyboard(chatId)
        });
    });
}



function getUserMenuKeyboard(chatId) {
    const keyboard = [
        ['üì≤ Channel Share & Earn', '‚ù§Ô∏è Post & Share ‚Çπ28-288'],
        ['üèÖ Deposit Guide', 'üèõ Can\'t install the game?'],
        ['üí¨ 24-hour customer service']
    ];

    if (chatId.toString() === ADMIN_CHAT_ID) {
        keyboard.push(['üëë Admin Panel']);
    }

    return {
        keyboard,
        resize_keyboard: true
    };
}







bot.onText(/\/start(?:\s*(\d+))?/, async (msg, match) => {
    const chatId = msg.chat.id;
    const userId = msg.from.id.toString();
    const referrerId = match[1];
    const username = msg.from.username || null;
    const currentDate = new Date().toISOString();

    if (!users[userId]) {
        users[userId] = {
            stars: 0,
            totalStars: 0,
            totalRedemptions: 0,
            referredBy: null,
            name: msg.from.first_name || null,
            username: username,
            joinDate: currentDate,
            lastActive: currentDate
        };

        if (referrerId && referrerId !== userId) {
            if (!users[referrerId]) {
                users[referrerId] = {
                    stars: 0,
                    totalStars: 0,
                    totalRedemptions: 0,
                    referredBy: null,
                    name: "Unknown",
                    username: null,
                    joinDate: currentDate,
                    lastActive: currentDate
                };
            }

            users[referrerId].stars += 1;
            users[referrerId].totalStars += 1;

            users[userId].referredBy = {
                id: referrerId,
                name: users[referrerId].name || "Unknown",
                username: users[referrerId].username || null
            };

            saveUsers();

            bot.sendMessage(referrerId,
                `üéâ *You earned 1 star!* Someone joined using your referral link!\n\n` +
                `‚≠ê *Total Stars Collected:* ${users[referrerId].totalStars}\n` +
                `üéÅ *Current Balance:* ${users[referrerId].stars} ‚≠ê`,
                { parse_mode: 'Markdown' }
            );
        }

        saveUsers();
    } else {
        users[userId].lastActive = currentDate;
        if (users[userId].username !== username) {
            users[userId].username = username;
            saveUsers();
        }
    }

    if (userId === ADMIN_CHAT_ID) {
        sendAdminMenu(chatId);
    } else {
        sendWelcomeBackMessage(chatId, users[userId]);
    }
});




bot.on('message', async (msg) => {
    const chatId = msg.chat.id;
    const userId = msg.from.id.toString();
    const text = msg.text;

    if (text.startsWith('/')) return;

    if (userId === ADMIN_CHAT_ID) {
        switch (text) {
            case 'üìä Platform Stats':
                const totalUsers = Object.keys(users).length;
                const totalStars = Object.values(users).reduce((sum, u) => sum + u.totalStars, 0);
                const totalReferrals = Object.values(users).filter(u => u.referredBy).length;

                bot.sendMessage(chatId,
                    `üìä *Platform Stats:*\n\n` +
                    `üë• Total Users: ${totalUsers}\n` +
                    `üîó Total Referrals: ${totalReferrals}\n` +
                    `‚≠ê Total Lifetime Stars Earned: ${totalStars}`,
                    { parse_mode: 'Markdown' }
                );
                return;

            case 'üë§ Switch to User View':
                sendWelcomeBackMessage(chatId, users[userId]);
                return;

            case 'üë• View User Info':
                bot.sendMessage(chatId, "üîç Please send the User ID to view details.");
                adminAwaitingUserId = true; // Set flag to await input
                return;


            case 'üèÜ Leaderboard':
                const sortedUsers = Object.entries(users)
                    .sort(([, a], [, b]) => (b.totalStars || 0) - (a.totalStars || 0))
                    .slice(0, 10);

                if (sortedUsers.length === 0) {
                    bot.sendMessage(chatId, "‚ö† No users found for the leaderboard.");
                    return;
                }

                let leaderboardText = `üèÜ *Top 10 Users by Total Stars:*\n\n`;

                sortedUsers.forEach(([uid, user], index) => {
                    leaderboardText += `${index + 1}. ` +
                        `üÜî *${uid}* | ` +
                        `üë§ *${user.name || "Unknown"}* | ` +
                        `üîó @${user.username || "N/A"} | ` +
                        `‚≠ê ${user.totalStars || 0} Stars\n`;
                });

                bot.sendMessage(chatId, leaderboardText, { parse_mode: 'Markdown' });
                return;





            case 'üëë Admin Panel':
                sendAdminMenu(chatId);
                return;
        }
    }

    if (adminAwaitingUserId && userId === ADMIN_CHAT_ID) {
        const targetId = text.trim();
        const targetUser = users[targetId];

        if (targetUser) {
            const referrals = Object.values(users).filter(u => u?.referredBy?.id == targetId).length;

            bot.sendMessage(chatId,
                `üë§ *User Details:*\n\n` +
                `üÜî *User ID:* ${targetId}\n` +
                `üë®‚Äçüíº *Name:* ${targetUser.name || 'Unknown'}\n` +
                `üîó *Username:* ${targetUser.username ? '@' + targetUser.username : 'Not Set'}\n` +
                `‚≠êÔ∏è *Total Stars:* ${targetUser.totalStars || 0}\n` +
                `üíº *Current Stars:* ${targetUser.stars || 0}\n` +
                `üë• *Referrals:* ${referrals}\n` +
                `üìÖ *Join Date:* ${targetUser.joinDate ? new Date(targetUser.joinDate).toLocaleString() : 'Unknown'}\n` +
                `üïì *Last Active:* ${targetUser.lastActive ? new Date(targetUser.lastActive).toLocaleString() : 'Unknown'}\n` +
                `üéØ *Total Redemptions:* ${targetUser.totalRedemptions || 0}`,
                { parse_mode: 'Markdown' }
            );
        } else {
            bot.sendMessage(chatId, `‚ö†Ô∏è No user found with ID: ${targetId}`);
        }

        adminAwaitingUserId = false;
        return;
    }




    const member = await isMember(userId);
    if (!member) {
        const channelLink = `https://t.me/${REQUIRED_CHANNEL}`;
        return bot.sendMessage(chatId, `üö´ Please join our official channel to use this feature.\nüëâ [Join Our Channel](${channelLink})`, {
            parse_mode: 'Markdown'
        });
    }

    switch (text) {
        case 'üì≤ Channel Share & Earn':
            sendShareMenu(chatId);
            break;

        case 'üåü My channel invite link':
            bot.sendPhoto(chatId, path.join(__dirname, 'assets', 'new-deposit-bonus.png'), {
                caption: `‚úÖ *Exclusive Channel Invitation Link:*\nhttps://t.me/${BOT_USERNAME}?start=${userId}\n\nüåü Share your unique referral link in various groups and earn stars!`,
                parse_mode: 'Markdown'
            });
            break;

        case '‚≠ê Check Star Points Balance':
            if (!users[userId]) {
                users[userId] = { stars: 0, totalStars: 0 };
                saveUsers();
            }
            const user = users[userId];
            const referrals = getReferralCount(userId);
            bot.sendMessage(chatId,
                `üë§ *Account Summary*\n\nüë®‚Äçüíº *Username:* ${msg.from.first_name || 'RAJA GAMES USER'}\nüÜî *User ID:* ${userId}\n\nüíº *Balance Information*\n‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ\n‚≠ê *Total Stars Collected:* ${user.totalStars || 0} ‚≠ê\nüéÅ *Current Star Balance:* ${user.stars} ‚≠ê\nüë• *Referrals:* ${referrals}\n‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ\n\nüéØ Accumulate *10 Stars* to redeem ‚Çπ50 bonus!\n‚ú® Keep sharing to earn more stars and claim exciting rewards!`,
                { parse_mode: 'Markdown' });
            break;

        case 'üåü Star Points Redemption Rewards':
            bot.sendPhoto(chatId, path.join(__dirname, 'assets', 'new-deposit-bonus.png'), {
                caption: `üèõ *How to Redeem Free Bonus*\n\nüßæ Click on the star points you want to redeem, and the system will automatically send you a free redemption code. You can log in to [Raja Games](https://rajagames.in/#/login) to redeem and receive it.\n\n‚úÖ Not yet a platform member? üëâ [Click here](https://rajagames.in/#/register)`,
                parse_mode: 'Markdown',
                reply_markup: {
                    inline_keyboard: [
                        [{ text: 'üéÅ 3 star points = ‚Çπ15 (3‚≠ê)', callback_data: 'redeem_3' }],
                        [{ text: 'üéÅ 5 star points = ‚Çπ25 (5‚≠ê)', callback_data: 'redeem_5' }],
                        [{ text: 'üéÅ 10 star points = ‚Çπ50 (10‚≠ê)', callback_data: 'redeem_10' }],
                        [{ text: 'üéÅ 20 star points = ‚Çπ100 (20‚≠ê)', callback_data: 'redeem_20' }],
                        [{ text: 'üéÅ 50 star points = ‚Çπ250 (50‚≠ê)', callback_data: 'redeem_50' }],
                        [{ text: 'üéÅ 100 star points = ‚Çπ500 (100‚≠ê)', callback_data: 'redeem_100' }],
                        [{ text: '‚¨ÖÔ∏è BACK', callback_data: 'back' }]
                    ]
                }
            });
            break;

        case '‚ù§Ô∏è Post & Share ‚Çπ28-288':
            bot.sendPhoto(chatId, path.join(__dirname, 'assets', 'new-deposit-bonus.png'), {
                caption:
                    `üëã Welcome to join the *Post and Share* event!\n\n` +
                    `‚ö° You can claim ‚Çπ28 to ‚Çπ288 free rewards here anytime every day.\n` +
                    `‚≠ê If you are participating in the event for the first time:\n\n` +
                    `üìù Click *How to share* to view posting examples and event requirements.\n\n` +
                    `Recently, we have increased the agent commission rate, increased VIP betting rebates, and increased welfare activities.\n\n` +
                    `Promoting the *Raja Games* platform will help you achieve financial freedom successfully.`,
                parse_mode: 'Markdown',
                reply_markup: {
                    keyboard: [
                        ['üéØ How to share', 'üüß Get pictures and information'],
                        ['üîª Get exclusive sharing links', 'üí∞ Verify and claim your bonus'],
                        ['‚¨ÖÔ∏è BACK']
                    ],
                    resize_keyboard: true
                }
            });
            return;




        case 'üéØ How to share':
            bot.sendPhoto(chatId, path.join(__dirname, 'assets', 'new-deposit-bonus.png'), {
                caption:
                    `Step 1: Click the üüß *Get pictures and information* button to get the promotional material.\n\n` +
                    `Step 2: Get your exclusive invitation link from *Raja Games* and insert it at the end of the promotional text.\n\n` +
                    `Step 3: Post the content on platforms like Facebook, Instagram, Whatsapp, etc. Make sure your post is public.\n\n` +
                    `üí° After at least 2 hours, copy your post link and submit it for verification to claim your reward.`,
                parse_mode: 'Markdown'
            });
            return;

        case 'üüß Get pictures and information':
            bot.sendPhoto(chatId, path.join(__dirname, 'assets', 'new-deposit-bonus.png'), {
                caption:
                    `üì• Please save the image above and copy the promotional text below. üëá\n\n` +
                    `*Raja Games - India's most trusted gaming platform!*\n` +
                    `üéÆ Play popular games like Aviator, JILI, Evolution, etc.\n` +
                    `üì≤ Join our official channel: https://t.me/rajagameshelpbot\n` +
                    `üí∞ Sign up now to get ‚Çπ200 free bonus and start your gaming journey easily!\n` +
                    `üõ°Ô∏è Safe & reliable, easy deposit & withdrawal, worry-free funds!`,
                parse_mode: 'Markdown'
            });
            return;

        case 'üîª Get exclusive sharing links':
            bot.sendPhoto(chatId, path.join(__dirname, 'assets', 'new-deposit-bonus.png'), {
                caption:
                    `üîó *How to get your exclusive invitation link:*\n\n` +
                    `1. Open Raja Games app, click the "Earn" pop-up window.\n` +
                    `2. Click "Invite your friends" and copy your exclusive link.\n\n` +
                    `‚ö†Ô∏è Remember to add your exclusive contact at the end of the promotional text.`,
                parse_mode: 'Markdown'
            });
            return;

        case 'üí∞ Verify and claim your bonus':
            bot.sendMessage(chatId, `‚úÖ Please click the button below to verify your post and claim your bonus:`, {
                reply_markup: {
                    inline_keyboard: [
                        [{ text: '‚úÖ Click here', url: 'https://t.me/RAJAGAMESERVICE_BOT' }]
                    ]
                }
            });
            return;




        case 'üèÖ Deposit Guide':
            bot.sendPhoto(chatId, path.join(__dirname, 'assets', 'new-deposit-bonus.png'), { caption: 'üèÖ Deposit Guide' });
